@model ExamenTrueHome.Models.ViewModel.ActivityViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<br />
<h3>Agregar</h3>
<form asp-action="Create" method="post">
    <div class="row px-2 mx-2 border">
        
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Activity.Title"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Activity.Title" class="form-control" />
                    <span asp-validation-for="Activity.Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Activity.Schedule"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Activity.Schedule" class="form-control" />
                    <span asp-validation-for="Activity.Schedule" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Activity.Property_Id"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Activity.Property_Id, Model.Properties, "Selecciona una actividad", new { @class = "form-control" })

                    <span asp-validation-for="Activity.Property_Id" class="text-danger"></span>
                </div>
            </div>
            <div class="col-8 offset-4">
                <div class="row">
                        <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>
           
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control">Guardar</button>
                            &nbsp;
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info form-control">Regresar</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</form>


